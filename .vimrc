"" Basics
set nocompatible
set noeb vb t_vb= " no beeping or flashing
set encoding=utf-8
 
syntax enable
filetype plugin indent on
let mapleader=","
 
"" Whitespace
set nowrap
set tabstop=2 shiftwidth=2
set expandtab
set backspace=indent,eol,start
 
"" Searching
set hlsearch
set incsearch
set ignorecase
set smartcase
 
"" Backup files
set nobackup
set nowb
set noswapfile
set viminfo= " don't use or save viminfo files
 
"" Other options
set showcmd
set ruler
 
"" Colorscheme
set background=dark
 
"" toggle paste mode
nnoremap <Leader>p :set invpaste paste?<CR>
set pastetoggle=<F2>
set showmode
 
"" toggle search term highlighting
:noremap <Leader>h :set hlsearch! hlsearch?<CR>"" Basics
